<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<% @books.each do |a| %>
	<tbody>
		<tr>
			<td><%= a.title %></td>
			<td><%= a.body %></td>
			<td><%= link_to "Show", book_path(a.id) %></td>
			<td><%= link_to "Edit", edit_book_path(a.id) %></td>
			<td><%= link_to "Destroy", book_path(a.id), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %></td>
		</tr>
	</tbody>
	<% end %>
</table>

<%= form_for(@book) do |f| %>
	<h2>New book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>

